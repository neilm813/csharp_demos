@*
  The model the form is going to submit.
*@
@model Post

<div class="container w-75 mx-auto">
  <h2 class="text-center">Edit Post</h2>

  @* <form href="posts/create" method="POST"> *@
  <form class="shadow p-3 rounded" asp-controller="Posts" asp-action="Update" asp-route-postId="@Model.PostId"
    method="POST">

    <div class="form-group">
      <label asp-for="Topic"></label>
      <span asp-validation-for="Topic" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Topic">
    </div>

    <div class="form-group">
      <label asp-for="Body"></label>
      <span asp-validation-for="Body" class="text-danger font-weight-bold">
      </span>
      <textarea class="form-control" asp-for="Body"></textarea>
    </div>

    <div class="form-group">
      <label asp-for="ImgUrl"></label>
      <input class="form-control" asp-for="ImgUrl">
    </div>

    <button class="btn btn-success">Update</button>
  </form>
</div>