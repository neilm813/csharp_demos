@model DestinationMedia

<div class="container w-75 mx-auto">
  <h2 class="text-center">New Destination</h2>

  <form class="shadow p-3 rounded" asp-controller="DestinationMedias" asp-action="Create" method="POST">

    <div class="form-group">
      <label asp-for="Location"></label>
      <span asp-validation-for="Location" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Location">
    </div>

    <div class="form-group">
      <label asp-for="Src"></label>
      <span asp-validation-for="Src" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Src">
    </div>

    <div class="form-group">
      <label asp-for="Type"></label>
      <span asp-validation-for="Type" class="text-danger font-weight-bold">
      </span>
      <select class="form-control" asp-for="Type">
        <option value="Image">Image</option>
        <option value="Youtube Embed">Youtube Embed</option>
        <option value="Google Maps Embed">Google Maps Embed</option>
        <option value="Website Embed">Website Embed</option>

      </select>
    </div>

    <div class="form-group">
      <label asp-for="ShortDescription"></label>
      <span asp-validation-for="ShortDescription" class="text-danger font-weight-bold">
      </span>
      <textarea class="form-control" asp-for="ShortDescription"></textarea>
    </div>

    <button class="btn btn-sm btn-outline-success">Submit</button>
  </form>
</div>