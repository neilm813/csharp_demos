@model Trip

<div class="container w-75 mx-auto">
  <h2 class="text-center">New Trip</h2>

  <form class="shadow p-3 rounded" asp-controller="Trips" asp-action="Create" method="POST">

    <div class="form-group">
      <label asp-for="Name"></label>
      <span asp-validation-for="Name" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Name">
    </div>

    <div class="form-group">
      <label asp-for="Description"></label>
      <span asp-validation-for="Description" class="text-danger font-weight-bold">
      </span>
      <textarea class="form-control" asp-for="Description"></textarea>
    </div>

    <div class="form-group">
      <label asp-for="Date"></label>
      <span asp-validation-for="Date" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Date">
    </div>

    <button class="btn btn-sm btn-outline-success">Submit</button>
  </form>
</div>