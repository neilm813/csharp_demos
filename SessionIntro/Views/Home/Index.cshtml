@{
    ViewData["Title"] = "Home Page";
}

@* This is the model that our form is submitting. *@
@model User

@*
    The tag asp- tag helpers will automatically look at the controlelr and method
    specified to build the action from the route in the controller.
    <form action="url/from/controller" method="POST">
*@
<form asp-controller="Home" asp-action="Login" method="POST">
    <div class="form-group">
        <label asp-for="Username"></label>
        <span asp-validation-for="Username" class="text-danger"></span>
        <input asp-for="Username" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PasswordConfirm"></label>
        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        <input asp-for="PasswordConfirm" class="form-control" />
    </div>

    <button class="btn btn-outline-primary">Submit</button>
</form>
