@{
  ViewData["Title"] = "Story Time!";
}

@*
  The page is DISPLAYING data from session so the ViewModel is available to be
  used for what the form is submitting.
*@
@model StoryFragment

@* @section AddToHead
  {
  <link rel="stylesheet" href="">
  } *@

<h2>
  Thank you <span class="text-success">@Context.Session.GetString("Username")</span> for joining us for Story Time!
</h2>

<p>Here is the story, thus far:</p>
<p class="p-3 border border-primary rounded">
  @Context.Session.GetString("story")
</p>

<form asp-controller="Home" asp-action="AddToStory" method="POST" class="p-3 border rounded">
  <div class="form-group">
    <label>Add a word to the story!</label>
    <span asp-validation-for="Word" class="text-danger"></span>
    <input asp-for="Word" class="form-control" />
  </div>
  <button class="btn btn-outline-primary">Submit</button>
</form>