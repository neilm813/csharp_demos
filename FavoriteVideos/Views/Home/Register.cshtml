@* This time the model is what the form on this page is creating. *@
@model User

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
  <h2>Register</h2>

  <form action="/users/process-registration" method="POST">
    <div>
      <label>First Name</label>
      @* name="FirstName" MUST match the property name of the Model. *@
      <input type="text" name="FirstName">
    </div>
    <div>
      <label>Last Name</label>
      <input type="text" name="LastName">
    </div>
    <button>Submit</button>
  </form>
</body>

</html>