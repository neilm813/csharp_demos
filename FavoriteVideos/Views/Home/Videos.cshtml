@*
  Specify the type of the view model that was passed in from the controller.

  Lower case @model is to specify the data type.
  Uppercase @Model is to use this data.
*@

@* @model FavoriteVideos.Models.VideosViewModel *@

@* This only works when adding Models to Views/_ViewImports.cshtml *@
@model VideosViewModel

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  @* The ~ in href refers to the wwwroot folder. *@
  <link rel="stylesheet" href="~/css/styles.css">
</head>

<body class="bg-dark text-light">
  <h2>@Model.Message</h2>
  <a href="/">Home</a>
  <hr>

  @foreach (var videoId in Model.YoutubeVideoIds)
  {
    <iframe width="560" height="400" src="https://www.youtube.com/embed/@videoId" title="YouTube video player"
    frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen></iframe>
  }
</body>

</html>