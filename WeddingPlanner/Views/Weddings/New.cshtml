@model Wedding

@{
  ViewData["Title"] = "New Wedding";
}

<div class="container">
  <h2 class="text-center">New Wedding</h2>

  <div class="row justify-content-center">
    <form asp-controller="Weddings" asp-action="Create" method="POST" class="border rounded w-50 p-3">
      <div class="form-group">
        <label asp-for="WedderOne"></label>
        <span asp-validation-for="WedderOne" class="text-danger font-weight-bold"></span>
        <input asp-for="WedderOne" class="form-control" />
      </div>

      <div class="form-group">
        <label asp-for="WedderTwo"></label>
        <span asp-validation-for="WedderTwo" class="text-danger font-weight-bold"></span>
        <input asp-for="WedderTwo" class="form-control" />
      </div>

      <div class="form-group">
        <label asp-for="Date"></label>
        <span asp-validation-for="Date" class="text-danger font-weight-bold"></span>
        <input asp-for="Date" class="form-control" />
      </div>

      <button class="btn btn-outline-success">Submit</button>
    </form>
  </div>
</div>